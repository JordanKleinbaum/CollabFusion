@page
@model SignalRChat.Pages.GeneralUploadModel
<br />
@if (Model.UploadSuccessful)
{
    <div class="alert alert-success" role="alert">
        Upload successful!
    </div>
}

@if (Model.FileList != null && !Model.UploadSuccessful)
{
    <div class="alert alert-danger" role="alert">
        Error: Unable to upload '@Model.ErrorFileName'.
    </div>
}

@if (Model.UploadedFileNames.Count > 0)
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">Uploaded Files:</h4>
        <ul>
            @foreach (var fileName in Model.UploadedFileNames)
            {
                <li>@fileName</li>
            }
        </ul>
    </div>
}

<div style="max-width: 500px; margin: 0 auto; background-color: #fff; border-radius: 8px; padding: 20px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
    <form method="post" enctype="multipart/form-data">
        <div style="margin-bottom: 20px;">
            <h2 style="margin-top: 0;">Upload Files</h2>
            <br />
            <input style="padding: 10px; border: 1px solid #ccc; border-radius: 4px; width: 100%; box-sizing: border-box;" asp-for="FileList" value="Upload Files" type="file" accept=".doc, .docx, application/pdf" multiple />
        </div>
        <br />
        <div style="margin-bottom: 20px;">
            <input style="padding: 10px 20px; background-color: #333; color: #fff; border: none; border-radius: 4px; cursor: pointer;" type="submit" value="Submit File" />
        </div>
    </form>
</div>
