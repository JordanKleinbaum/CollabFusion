@page
@model SignalRChat.Pages.UploadFileModel
@{
    ViewData["username"] = HttpContext.Session.GetString("username");
}

<div style="max-width: 500px; margin: 0 auto; background-color: #fff; border-radius: 8px; padding: 20px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);" class="mt-3">
    <h2 style="margin-top: 0; text-align: center;">Upload Documents</h2>

    <!-- Display success message if it exists in TempData -->
    @if (TempData["UploadSuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["UploadSuccessMessage"]
        </div>
    }

    <form method="post" enctype="multipart/form-data">
        <div class="form-group" style="margin-bottom: 20px;">
            <input style="text-align: center; padding: 10px; border: 1px solid #ccc; border-radius: 4px; width: 100%; box-sizing: border-box;" type="file" class="form-control-file" id="file" name="file" accept=".docx,.doc">
        </div>
        <div class="form-group">
            <label for="analysisType">Document Property:</label>
            <select class="form-control" id="analysisType" name="AnalysisType" asp-for="AnalysisType">
                <option disabled selected value="">Choose...</option>
                <option value="Revenue Projection">Revenue Project</option>
                <option value="Spending Growth Projections">Spending Growth Projections</option>
                <option value="Benchmarking Analysis">Benchmarking Analysis</option>
                <option value="Best Practices">Best Practices</option>
                <option value="Benchmark SWOT Analysis">Benchmark SWOT Analysis</option>
                <option value="Legal Requirement">Legal Requirement</option>
                <option value="Management Practice">Management Practice</option>
                <option value="Tax Assesment">Tax Assesment</option>
                <option value="Economic Development SWOT Analysis">Economic Development SWOT Analysis</option>
                <option value="Economic Development PEST Analysis">Economic Development PEST Analysis</option>
                <option value="Help Document">Help Document</option>
            </select>
        </div>
        <button style="padding: 10px 20px; background-color: #333; color: #fff; border: none; border-radius: 4px; cursor: pointer; width: 100%;" type="submit" class="btn btn-primary mt-3">Upload</button>
    </form>
    <br />
    <a class="btn" style="background-color: #293A7F; color: white;" asp-page="/CollabHub">&#8592; Back</a>
</div>
