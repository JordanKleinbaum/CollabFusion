<h1>Upload Word Document</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Select File:</label>
        <input type="file" class="form-control-file" id="file" name="file" accept=".docx,.doc">
    </div>
    <div class="form-group">
        <label for="analysisType">Select Analysis Type:</label>
        <select class="form-control" id="analysisType" name="AnalysisType" asp-for="AnalysisType">
            <option disabled selected value="">Analysis Type</option> 
            <option value="SWOT">SWOT</option>
            <option value="PEST">PEST</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>