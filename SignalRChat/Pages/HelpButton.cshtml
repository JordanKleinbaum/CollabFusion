@page
@model SignalRChat.Pages.HelpButtonModel
@{

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Bootstrap Example</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

        <!-- Buttons inside user/admin boxes -->
        <style>
            .custom-btn {
                background-color: #293A7F;
                color: white;
            }
        </style>

        <!-- Button to upload documents -->
        <style>

            .custom-submit-btn {
                background-color: #293A7F; 
                border-color: #293A7F; 
                color: #fff; 
            }

                .custom-submit-btn:hover {
                    background-color: #1f2f6f; 
                    border-color: #1f2f6f;
                }
        </style>

    </head>
    <body>
        <!--User and admin boxes -->
        <div class="container pt-5">
            <div class="row">
                <div class="col-md-6">
                    <div class="d-flex flex-column justify-content-center align-items-center" style="height: 200px; background-color: lightgray;">
                        <h5 class="fw-bold mb-3">General User Guide</h5>
                        <!-- Not sure how to upload documents yet -->
                        <a href="GeneralUserGuide.docx" class="btn custom-btn" download>Download</a>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="d-flex flex-column justify-content-center align-items-center" style="height: 200px; background-color: lightgray;">
                        <h5 class="fw-bold mb-3">Admin Guide</h5>
                        <!-- Not sure how to upload documents yet -->
                        <a href="AdminHelpGuide.docx" class="btn custom-btn" download>Download</a>
                    </div>
                </div>
                <div class="col-md-4 offset-md-6">
                    <!-- Upload Form -->
                    <form>
                        <div class="sm-3">

                            <label for="fileUpload" class="form-label mt-10">Upload New Documents</label>
                            <input class="form-control" type="file" id="fileUpload" multiple>
                        </div>
                        <button type="submit" class="btn custom-submit-btn mt-3">Upload</button>
                      

                    </form>
                </div>
            </div>
        </div>
    </body>
    </html>

    


}
